<div class="screen-header">
  <div class="user">
  <div class="user-number">
    <%= "No.#{current_user.number}" %>
  </div>
  <div class="user-name">
    <%= "#{current_user.name} さん" %>
  </div>
  </div>
  <div class="button">
    <%= link_to "アカウント編集", edit_user_path(current_user) %>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
  </div>
</div>

<div class="time">
  <div class="now-time">
    <p class="clock-date"></p>
    <p class="clock-time"></p>
  </div>
</div>

<div class="work">
  <div class="total-time">
    <p> 合計残業時間　◯◯時間○○分 </p>
  </div>
  <div class="continuous-work">
    <p> 連続勤務日数○日 </p>
  </div>
</div>

<div class="buttons">
  <div class="button-below">
    <div class="button-name">
      <a href="#">出勤</a>
    </div>
  </div>
  <div class="button-below">
    <div class="button-name">
      <a href="#">退勤</a>
    </div>
  </div>
</div>